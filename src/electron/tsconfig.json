{
  "compilerOptions": {
    // require strict types (null, undefined, etc)
    "strict": true,
    // tell typescript to generate ESM code
    "target": "ESNext",
    // tell typescript to require ESM syntax as input (including .js file imports)
    "module": "NodeNext",
    // define where to put the generated code
    "outDir": "../../dist-electron",
    // skip type checking for external libraries
    "skipLibCheck": true
  }
}